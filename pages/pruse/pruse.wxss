.user-info {
  box-sizing: border-box;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #4fa800;
  color: #fec000;
}

.user-avatar {
  text-align: center;
  font-size: 50rpx;
}

.user-cost {
  align-items: center;
  background: #fec000;
  color: #fff;
  border-radius: 50rpx;
  text-align: center;
  font-size: 35rpx;
}

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}
